@model IEnumerable<Turns.Models.Speciality>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @*Here we put the code to show the registers from DB*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SpecialityId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SpecialityId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>