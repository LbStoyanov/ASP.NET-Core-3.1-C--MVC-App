@model Turns.Models.Speciality

<h4>Speciality</h4>

<div>
    <form class="col s12" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">add_circle</i>
                <label asp-for="Description"></label>
                <input asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6 s6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>

            <div class="col s6 s6">
                <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i
                        class="material-icons left">undo</i>back</a>
            </div>
        </div>
    </form>
</div>
