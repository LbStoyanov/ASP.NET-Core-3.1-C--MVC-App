@model Shifts.Models.Patient

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>

    <div>
        <h4>Patient</h4>
        <hr />
        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.FirstName), @Html.DisplayFor(model =>
                                    model.LastName)</b></h5>
                        </span>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Direction): @Html.DisplayFor(model =>
                                model.Direction)
                            </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.PhoneNumber): @Html.DisplayFor(model =>
                                model.PhoneNumber)</h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</h6>
                        </dt>
                        <hr />


                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="PatientId" />
                            <a class="waves-effect waves-light btn-small orange accent-4 black-text" asp-action="Edit"
                                asp-route-id="@Model.PatientId">Edit</a>
                            <a asp-action="Index"
                                class="waves-effect waves-light btn-small orange accent-4 right black-text">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
