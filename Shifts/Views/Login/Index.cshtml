@model Shifts.Models.Login

@{
    Layout = null;
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
<script type="text/javascript" src="~/js/materialize.min.js"></script>

<div class="container">
    <h4>Login</h4>
    <hr />
    <br />

    <style>
        .field-validation-error {
            color: red;
        }
    </style>

    <form class="col s12" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">person_pin</i>
                <input asp-for="Username" type="text">
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="field-validation-error"></span>
            </div>
        </div>
        <span class="red-text">@ViewBag.errorLogin</span>
        <br><br />
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">vpn_key</i>
                <input asp-for="Password" type="password">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Login
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>
    <form class="col s12" asp-controller="Login" asp-action="CreateAccount">
        <div>
            <p>Or</p>
            <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Create Account
                <i class="material-icons right">account_circle</i>
            </button>
        </div>
    </form>
</div>