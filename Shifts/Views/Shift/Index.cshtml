@model Shifts.Models.Shift
@Html.AntiForgeryToken()

@{
    ViewBag.Title = "Assign Shifts";
}

<div class="row">
    <div class="col s6">
        <label asp-for="DoctorId">Doctor</label>
        <select asp-for="DoctorId" asp-items="ViewBag.DoctorId"></select>
    </div>
    <div class="col s6">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" asp-items="ViewBag.PatientId"></select>
    </div>
</div>

<div id="ShiftsCalendar"></div>

<link href="~/fullcalendar/fullcalendar.css" rel="stylesheet" />
<link href="~/fullcalendar/fullcalendar.print.css" rel="stylesheet" media="print" />
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="~/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/fullcalendar/locale/en-gb.js"></script>
    <script>
        $(document).ready(function () {


            $('#ShiftsCalendar').fullCalendar({
                contentHeight: 'auto',
                defaultDate: new Date(),
                slotLabelFormat: "HH:mm",
                defaultView: 'agendaWeek',
                header: {
                    left: 'prev, next today',
                    //center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                slotDuration: '00:30',
                nowIndicator: true,
                allDaySlot: false,
                selectable: true,
                eventLimit: true,

            });
        }

    </script>
}
