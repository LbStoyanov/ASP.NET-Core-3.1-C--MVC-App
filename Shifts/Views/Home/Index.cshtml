@{
    ViewData["Title"] = "Home Page";
}

<br>
<br>
<br>
<div class="row">
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center green darken-4">
                <i class="material-icons large">star_rate</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Speciality"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Specialities:</span>
                <p>Here you can register new Specialties, modify and delete them. Waiting to be assigned to a doctor.
                </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Speciality" asp-action="Index">See more</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center orange darken-3">
                <i class="material-icons large">person</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Doctor"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Doctors:</span>
                <p>Here you can register new Doctors, modify their data and relate them to their specialty.
                </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Doctor" asp-action="Index">See more</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center cyan accent-3">
                <i class="material-icons large">assignment_ind</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Patient"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Patients:</span>
                <p>Here you can register new Patients, modify their data or delete them from the database.
                </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Patient" asp-action="Index">See more</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center light-green accent-3">
                <i class="material-icons large">access_time</i>
            </div>
            <div class="card-content">
                <span class="card-title">Shifts:</span>
                <p>Here you can register new hour to a patient by assigning a specific doctor.
                </p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Shift" asp-action="Index">Assign shift</a>
            </div>
        </div>
    </div>

</div>
