@model Shifts.Models.Speciality

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>

<body>

    <h3>Are you sure you want to delete this speciality?</h3>

     @if (ViewBag.WarningMessage != null)
    {
        <div class="alert alert-warning">
            @ViewBag.WarningMessage
        </div>
    }
    <div>
        <h4>Speciality</h4>
        <hr />
        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Description)</b></h5>
                        </span>
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SpecialityId" />
                            <input type="submit" value="DELETE"
                                class="waves-effect waves-light btn-small orange accent-4" />
                            <a asp-action="Index"
                                class="waves-effect waves-light btn-small orange accent-4 right black-text">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
